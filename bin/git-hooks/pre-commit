#!/bin/bash -x
set -e

HOOK_DIR="$(git rev-parse --show-toplevel)/bin/git-hooks"
GIT_DIR="$(git rev-parse --show-toplevel)/.git"

shopt -s nullglob
for HOOK in "${GIT_DIR}/hooks/pre-commit.d"/* "${HOOK_DIR}/pre-commit.d"/* ; do
    if [ -f "${HOOK}" ] && [ -x "${HOOK}" ]; then
      ${HOOK} "$@"
    fi
done
