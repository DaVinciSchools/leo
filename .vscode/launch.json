    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Server",
            "request": "launch",
            "mainClass": "org.davincischools.leo.server.ServerApplication",
            "projectName": "project-leo-server",
            "classPaths": [
                "$Auto",
                "${workspaceFolder}/server/target/classes",
                "${workspaceFolder}/server/src/main/resources",
            ]
        },
        {
            "type": "java",
            "name": "Server + React Server",
            "request": "launch",
            "mainClass": "org.davincischools.leo.server.ServerApplication",
            "projectName": "project-leo-server",
            "args": "--react_port=3000",
            "classPaths": [
                "$Auto",
                "${workspaceFolder}/server/target/classes",
                "${workspaceFolder}/server/src/main/resources",
            ]
        },
        {
            "type": "java",
            "name": "Create Admin User",
            "request": "launch",
            "mainClass": "org.davincischools.leo.database.admin.AdminUtils",
            "projectName": "project-leo-database",
            "args": ["--createDistrict=Test District", "--createAdmin=${input:admin_email}"],
            "classPaths": [
                "$Auto",
                "${workspaceFolder}/database/target/classes",
                "${workspaceFolder}/database/src/main/resources",
            ]
        }
    ],
    "inputs": [
        {
            "id": "admin_email",
            "type":"promptString",
            "description": "Enter an admin e-mail username.",
            "default": "admin@davincischools.org"
        }
    ]
}